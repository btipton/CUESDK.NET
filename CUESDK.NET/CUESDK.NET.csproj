<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>3.4</Version>
    <Authors>AndrewBabbitt97</Authors>
    <Company>Corsair</Company>
    <Product>Spectrum.CUESDK</Product>
    <PackageReleaseNotes>Fixed namespaces to be Corsair.CUE.SDK</PackageReleaseNotes>
    <PackageTags>Corsair;AndrewBabbitt97;CUE;ICUE;SDK</PackageTags>
    <PackageId>Spectrum.CUESDK.NET</PackageId>
    <Description>Wrapper for the native CUESDK provided by Corsair</Description>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <Copyright>Corsair Components Inc.</Copyright>
    <PackageProjectUrl>https://github.com/AndrewBabbitt97/CUESDK.NET</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/AndrewBabbitt97/CUESDK.NET/master/nuget.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/AndrewBabbitt97/CUESDK.NET</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <SignAssembly>false</SignAssembly>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Spectrum.CUESDK.NET</AssemblyName>
    <RootNamespace>Spectrum.CUE.SDK</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile></DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Include="runtimes\**" PackagePath="runtimes" />
  </ItemGroup>

</Project>
